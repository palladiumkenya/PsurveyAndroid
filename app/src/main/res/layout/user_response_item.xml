<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:text="Quetion"
            android:padding="5dp"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_survey_id"
            android:layout_width="0dp"
            android:layout_weight="1.40"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Get SurveyID"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />




        <ImageButton
            android:id="@+id/bt_delete"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"

            app:tint="@color/colorPrimary" />


        <ImageButton
            android:id="@+id/bt_edit"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"

            app:tint="@color/colorPrimary" />
    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textStyle="bold"

            android:padding="5dp"
            android:text="Quetion ID:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_query_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="QueryID"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />



        <TextView
            android:id="@+id/tv_query_id2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="QueryID22222222222222222"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Answer"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_open_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="OpenID"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />




    </LinearLayout>






</LinearLayout>
